{{#if user.IsAdmin}}
    <header class='top-navbar'>
        <nav class='navbar navbar-expand-lg navbar-light bg-light'>
            <div class='container'>
                <a class='navbar-brand' href='index.html'>
                    <img
                        src='https://res.cloudinary.com/dqx1h3eve/image/upload/v1687108461/feygfhny_1_ojruro.png'
                        alt=''
                        style='width: 170px; height: 15vh;'
                    />
                </a>
                <button
                    class='navbar-toggler'
                    type='button'
                    data-toggle='collapse'
                    data-target='#navbars-rs-food'
                    aria-controls='navbars-rs-food'
                    aria-expanded='false'
                    aria-label='Toggle navigation'
                >
                    <span class='navbar-toggler-icon'></span>
                </button>
                <div class='collapse navbar-collapse' id='navbars-rs-food'>
                    <ul class='navbar-nav ml-auto'>
                        <li class='nav-item'><a class='nav-link' href='/'>Trang
                                chủ</a></li>
                        {{! <li class='nav-item'><a
                                class='nav-link'
                                href='/hotpots/create'
                            >Thêm lẩu</a></li> }}

                        <div class='dropdown btnHi'>
                            <a
                                href='#'
                                id='drop1'
                                class='dropdown-toggle nav-link'
                                role='button'
                                data-bs-toggle='dropdown'
                                style='text-decoration: none;'
                            >
                                Quản lý sản phẩm
                            </a>
                            <ul
                                class='dropdown-menu'
                                aria-labelledby='drop1'
                                style='width: 100%; font-size: 15px; '
                            >
                                <li><a
                                        href='/hotpots/create'
                                        role='menuitem'
                                        style='text-decoration: none;color:black;'
                                    >Thêm lẩu</a></li>
                                <li><a
                                        href='/toppings/create'
                                        role='menuitem'
                                        style='text-decoration: none;color:black;'
                                    >Thêm topping</a></li>
                                <li><a
                                        href='/warehouse/stored/hotpots'
                                        role='menuitem'
                                        style='text-decoration: none;color:black;'
                                    >Lưu trữ</a></li>
                            </ul>
                        </div>
                        <div class='big-home'>
                            <div
                                class='dropdown dd'
                                style='background-color: #eba780; height: 7.5vh;'
                            >
                                <button
                                    class='btn btn-dd'
                                    type='button'
                                    data-bs-toggle='dropdown'
                                    aria-expanded='false'
                                    style='border: 1px solid white;'
                                >
                                    <div style='display: flex;'>
                                        <img
                                            style='border-radius: 50%;'
                                            src='https://colorlib.com/polygon/srtdash/assets/images/author/avatar.png'
                                            alt=''
                                        />
                                        <a
                                            class='dropdown-item'
                                            style='padding-top: 10%; padding-left: 7%; padding-right: 5%; color:white; font-size: 13px;'
                                        >{{user.name}}</a>

                                    </div>
                                    <i
                                        class='fa-solid fa-angle-down'
                                        style='color: #ffffff;'
                                    ></i>
                                </button>
                                <ul class='dropdown-menu'>
                                    <li><a href='/user/logout'>Đăng xuất</a></li>
                                </ul>
                            </div>
                        </div>

                    </ul>
                </div>
            </div>
        </nav>
    </header>

